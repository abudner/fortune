</head>

<body>
<div id="wrapper">
<div id="header-wrapper">

  <header>
  <div id="logo">
     <h1><a><%="Fortune" %></a></h1>
     <h2>by abudner </h2>  
</div>
   
 <div id="search">

<fieldset>


<%= form_tag forts_path,:method => "GET",:remote=>true, :id => "text_field" do %>
</fieldset>

  <p>
    <%=text_field :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>

<% end %>


</div>

  





</header>
<div id="menu">
<ul>

<li><% if current_user %>
  Welcome <%= current_user.name %>!
  <%= link_to "Sign Out", signout_path %>
<% else %>
  <%= link_to "Sign in with Twitter", "/auth/twitter" %>
<% end %>
	
</li>
</ul>
</div>
</div>
</div>
  
 <div id="page">
 <div id="banner"><a href="#"><img src="../images/img05.jpg" alt="" /></a></div>
 
 <div id="page-bgcontent">

 
 <div id="main">

<h2 class="title"><%= yield(:title) if show_title? %></h2>
   
   <%= yield %>



</div>
</div>
