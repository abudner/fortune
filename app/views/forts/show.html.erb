<% title "Show Fortune" %>

<% if notice -%>
<div id="notice"><%= notice %></div>
<% end -%>

<article class="single">
  <div class="post">
<p class="byline">
    <span class="name">Author : </span>
    <span class="value"><%= @fort.source %></span>
</p>	  
</div>
  <div class="post">
<p class="bylinee">
    <span class="name">Fortune : </span>
    <span class="value"><%= @fort.body %></span>
</p>  
</div>
  <div id="links">
    <%= link_to '✎', edit_fort_path(@fort) %> | <%= link_to '⥄', 
forts_path %>
  </div>
</article>


<% if @fort.comments.any? %>
  <h1>Comments</h1>
  <%= render :partial => 'comments/comment', :collection => @fort.comments %>
<% end %>

<h2>New Comment</h2>
<%= render :partial => 'comments/form' %>
